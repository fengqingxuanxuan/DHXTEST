<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_diss"
       android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorText"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buyPopu"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:textColor="@color/clolrTextNorenl"/>
            <ImageView
                android:id="@+id/img_popu_indina_buy_closs"
                android:layout_width="wrap_content"
                android:src="@mipmap/closs"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/progressbarNomal"
            ></View>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/canyvCi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@mipmap/xingzhuangtiao"
           >
            <EditText
                android:id="@+id/eid_popu_indinan_buy"
                android:layout_width="200dp"
                android:textSize="18sp"
                android:gravity="center"
               android:text="1"
                android:background="@null"

                android:numeric="integer"
                android:textColor="@color/colorBackMemu"
                android:layout_centerInParent="true"
                android:layout_height="50dp"/>

            <ImageView
                android:layout_toLeftOf="@id/eid_popu_indinan_buy"
                android:id="@+id/img_popu_indina_buy_red"
                android:background="@mipmap/red"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_toLeftOf="@id/eid_popu_indinan_buy"
                android:id="@+id/btn_popu_indina_buy_red"
                android:background="#00000000"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/eid_popu_indinan_buy"
                android:id="@+id/img_popu_indina_buy_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/add"/>

            <Button
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/eid_popu_indinan_buy"
                android:id="@+id/btn_popu_indina_buy_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"/>
        </RelativeLayout>
     <!--   <com.tiantianle.view.AmountView
            android:layout_marginTop="10dp"
            android:id="@+id/amount_view"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"/>
-->
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp">
            <Button
                android:id="@+id/btn_popu_indina_but_5"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="5"
                android:background="@mipmap/backbutton"
                />
            <Button
                android:id="@+id/btn_popu_indina_but_20"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/btn_popu_indina_but_5"
                android:layout_height="30dp"
                android:text="20"
                android:background="@mipmap/backbutton"
                />
            <Button
                android:id="@+id/btn_popu_indina_but_50"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/btn_popu_indina_but_20"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="50"
                android:background="@mipmap/backbutton"
                />
            <Button
                android:id="@+id/btn_popu_indina_but_100"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/btn_popu_indina_but_50"
                android:layout_width="50dp"
                android:layout_marginLeft="20dp"
                android:layout_height="30dp"
                android:text="100"
                android:background="@mipmap/backbutton"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_queren_popu_indina"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="@string/goumai"
            android:textColor="@color/colorText"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_popu_indinan_cent_buy"/>



    </LinearLayout>


</LinearLayout>