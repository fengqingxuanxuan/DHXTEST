<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.tiantianle.TimeCountDownTextView
                android:id="@+id/text_daotime_4_fram"
                android:layout_width="wrap_content"
                android:text="0秒"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="@color/colorText"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/backred"
                android:layout_height="40dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/text_jianchi_4_fram"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="奖池"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/text_jiangchishuliang_4"
                android:layout_width="wrap_content"
                android:text="20000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:textColor="@color/jisulist"
                android:layout_toRightOf="@id/text_jianchi_4_fram"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_qishu_4_fram"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="第1520期"
                android:layout_below="@id/text_jianchi_4_fram"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/text_tiem_4_fram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginRight="10dp"
                android:text="16:00"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/text_4_jisu_list"
                android:text="0/28"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:textSize="7sp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/text_tiem_4_fram"
                android:gravity="center"
                android:background="@mipmap/biligray"
                android:layout_width="25dp"
                android:layout_height="15dp"/>
            <Button
                android:id="@+id/btn_touzhu_4_jisu_list"
                android:text="投注"
                android:textSize="10sp"
                android:textColor="@color/colorText"
                android:layout_marginRight="6dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/text_tiem_4_fram"
                android:background="@drawable/my_button_tuichu"
                android:layout_width="50dp"
                android:layout_height="30dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/progressbarNomal"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>