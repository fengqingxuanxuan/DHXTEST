<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/ll_woshihaoren"
              android:layout_width="match_parent"
              android:background="@color/colorText"
              android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_adapter_indiana"
            android:layout_width="150dp"
            android:layout_centerInParent="true"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/modou"
            />

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/text_specname0_indinan"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:text="100"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="80dp"
            android:layout_alignLeft="@+id/img_adapter_indiana"
            android:layout_alignStart="@+id/img_adapter_indiana"/>

        <TextView
                android:id="@+id/text_specname1_indinan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="3dp"
                android:textColor="@color/colorText"
                android:text="魔豆"
                android:layout_alignBaseline="@+id/text_specname0_indinan"
                android:layout_alignBottom="@+id/text_specname0_indinan"
                android:layout_toRightOf="@+id/text_specname0_indinan"
                android:layout_toEndOf="@+id/text_specname0_indinan"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_issuenum_indinana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textSize="12sp"
                />

            <ProgressBar
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/progressBar_adapter_indiana"
                android:layout_marginRight="10dp"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:progressDrawable="@drawable/progressbar"
                android:layout_height="5dp"
                android:max="100"
                android:progress="50"
                android:visibility="visible"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_zongxu"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clolrTextNorenl"
                    android:textSize="10sp"
                    android:text="@string/zongXu"/>
                <TextView
                    android:id="@+id/text_adapter_indiana_zongxu"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:textColor="@color/clolrTextNorenl"
                    android:textSize="10sp"
                    android:layout_toRightOf="@id/text_zongxu"
                    android:layout_height="wrap_content"
                    android:text=""/>

            <TextView
               android:id="@+id/text_adapter_indiana_shengyv"
               android:layout_width="wrap_content"
               android:layout_marginRight="5dp"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:textSize="10sp"
               android:text=""
               android:textColor="@color/clolrTextNorenl"
               android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/text_shengyv"
                   android:layout_centerVertical="true"
                    android:textColor="@color/clolrTextNorenl"
                    android:layout_toLeftOf="@id/text_adapter_indiana_shengyv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="@string/shengYv"/>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            >
            <Button
                android:id="@+id/btn_adapter_indinan_buy"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:textSize="12sp"
                android:background="@drawable/button_adapter_iniana_shap"
                android:textColor="@color/colorBackMemu"
                android:text="立即购买"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>