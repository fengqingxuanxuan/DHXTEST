<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detailed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorText"
    tools:context="com.tiantianle.activity.Detailed">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBackMemu"
        >
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/back_menu_deailed"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/leftback"/>

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/bigh_text_detailed"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:text="测试28开奖明细"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:background="@drawable/ll_back_left"
            android:layout_height="35dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/text_detailed_qihao"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="开奖期号"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/text_detailed_qihaonum"
                    android:textSize="12sp"
                    android:text="11223"
                    android:textColor="@color/colorBackMemu"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/text_detailed_time"
                    android:layout_marginLeft="2dp"
                    android:text="12:00"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/ll_back_right"
            android:layout_height="35dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_height="35dp">
                <TextView
                    android:id="@+id/text_detailed_num"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:text="开奖号码"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/text_detailed_numjia"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:text="1+7+12="
                    android:textColor="@color/colorBackMemu"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_detailed_nunjieguo"
                    android:layout_width="25dp"
                    android:textColor="@color/colorText"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:text="22"
                    android:gravity="center"
                    android:background="@mipmap/backred"
                    android:layout_height="25dp"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <RadioGroup
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_zhongjian_detailed"
            android:layout_width="100dp"
            android:text="中奖名单"
            android:checked="true"
            android:textStyle="normal"
            android:textColor="@drawable/radio_zhong_text"
            android:button="@null"
            android:background="@drawable/radio_detailed_left"
            android:gravity="center"
            android:layout_height="35dp"/>
        <RadioButton
            android:id="@+id/radio_my_detailed"
            android:layout_width="100dp"
            android:text="我的投注"
            android:textStyle="normal"
            android:background="@drawable/radio_detailed_right"
            android:textColor="@drawable/radio_zhong_text"
            android:button="@null"
            android:gravity="center"
            android:layout_height="35dp"/>

    </RadioGroup>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <FrameLayout
            android:id="@+id/fram_detailed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>
