<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!--  <TextView
          android:id="@+id/text"
          android:text="i am main"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        >

        <FrameLayout
            android:id="@+id/fram_big_hall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D4D4D4"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radiob_bighome_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/hall"
                android:gravity="center"
                android:text="@string/Hall"
                android:textColor="@drawable/text_selected"
                android:textSize="13sp"/>

            <RadioButton
                android:id="@+id/radiob_trend_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/trend"
                android:gravity="center"
                android:text="@string/Trend"
                android:textColor="@drawable/text_selected"
                android:textSize="13sp"/>

            <RadioButton
                android:id="@+id/radiob_shaopp_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/shaopping"
                android:gravity="center"
                android:text="@string/ShoppingMall"
                android:textColor="@drawable/text_selected"
                android:textSize="13sp"/>

            <RadioButton
                android:id="@+id/radiob_me_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/my"
                android:gravity="center"
                android:text="@string/My"
                android:textColor="@drawable/text_selected"
                android:textSize="13sp"/>
        </RadioGroup>


    </LinearLayout>
</LinearLayout>