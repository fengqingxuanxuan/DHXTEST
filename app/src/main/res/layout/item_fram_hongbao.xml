<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
            android:background="@color/colorText"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBackMemu"
        >
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/bigh_menu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/menu"/>

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/bigh_text"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:text="@string/HongBao"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:text="@string/RecordHongbao"
            android:textColor="@color/colorText"
            android:id="@+id/text_hongbao_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:text="@string/julihongbao"
                    android:textColor="@color/clolrTextNorenl"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <cn.iwgang.countdownview.CountdownView
                    android:id="@+id/text_countdownv_hongbao_fram"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:isHideTimeBackground="true"
                    app:isShowHour="true"
                    app:isShowMinute="true"
                    app:isShowSecond="true"
                    app:timeTextColor="@color/colorBackMemu"
                    app:timeTextSize="12sp"
                    app:isTimeTextBold="true"
                    app:suffixTextColor="@color/clolrTextNorenl"
                    app:suffixTextSize="12sp"
                    app:suffixHour="时"
                    app:suffixMinute="分"
                    app:suffixSecond="秒"
                    />





            </LinearLayout>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/progressbarNomal"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@mipmap/hongbaochangci"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/text_hongbao_changci"
                    android:text="@string/hongbaochangci1"
                    android:textColor="@color/colorText"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/ll_hongbao_changci"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_startim_hongbaotiem"
                        android:text="13:00"

                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="-"
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/text_endtiem__hongbaotime"
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:text="13:30"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/text_jieguo_hongbao"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorText"
                    android:layout_gravity="center_horizontal"
                    android:text="未开始"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@mipmap/hongbaochangci"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/text1_hongbao_changci"
                    android:text="@string/hongbaochangci1"
                    android:textColor="@color/colorText"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/ll1_hongbao_changci"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text1_startim_hongbaotiem"
                        android:text="13:00"

                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="-"
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/text1_endtiem__hongbaotime"
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:text="13:30"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/text1_jieguo_hongbao"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorText"
                    android:layout_gravity="center_horizontal"
                    android:text="未开始"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@mipmap/hongbaochangci"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/text2_hongbao_changci"
                    android:text="@string/hongbaochangci1"
                    android:textColor="@color/colorText"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/ll2_hongbao_changci"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text2_startim_hongbaotiem"
                        android:text="13:00"

                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="-"
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/text2_endtiem__hongbaotime"
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:text="13:30"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/text2_jieguo_hongbao"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorText"
                    android:layout_gravity="center_horizontal"
                    android:text="未开始"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:layout_centerInParent="true"
                android:text="@string/hongbaoDongtai"
                android:layout_width="200dp"
                android:textColor="@color/colorText"
                android:background="@drawable/btn_hongbao_dongtai_shap"
                android:layout_height="60dp"/>

        </RelativeLayout>
        <com.allen.library.SuperTextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:background="@color/colorText"
            app:sCenterTextSize="14sp"
            app:sLeftTextSize="14sp"
            app:sRightTextSize="14sp"
            app:sCenterTextColor="@color/clolrTextNorenl"
            app:sLeftTextColor="@color/clolrTextNorenl"
            app:sRightTextColor="@color/clolrTextNorenl"
            app:sLeftTextString="@string/userID"
            app:sCenterTextString="@string/jine"
            app:sRightTextString="@string/tiem"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/progressbarNomal"
            />
        <com.tiantianle.view.MyListview
            android:id="@+id/mliseview_hongbao_fram"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>