<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/text_mybetting_detailed_haoma_type2"
                android:text="1"
                android:layout_marginTop="2dp"
                android:background="@mipmap/backred"
                android:layout_width="35dp"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorText"
                android:gravity="center"
                android:layout_height="35dp"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_mybetting_detailed_peilv_type2"
                android:text="赔率"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/clolrTextNorenl"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_mybetting_detailed_touzhue_type2"
                android:text="投注额"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/clolrTextNorenl"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_mybetting_detailed_winmodou_type2"
                android:text="获得魔豆"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/clolrTextNorenl"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>