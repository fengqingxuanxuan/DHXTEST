<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_indiana_rember"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tiantianle.activity.IndianaRember">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/colorBackMemu"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/img_indianaRember_back"
        android:layout_width="wrap_content"
        android:src="@mipmap/navback"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:text="@string/RecordIndiana"/>
</RelativeLayout>



<android.support.design.widget.TabLayout
    android:id="@+id/tab_indianaremb"
    android:layout_width="match_parent"
    android:background="@color/colorText"
    android:layout_height="wrap_content"
    app:tabIndicatorColor="@color/colorBackMemu"
    app:tabSelectedTextColor="@color/colorBackMemu"
    app:tabTextColor="@color/colorTextSeleced"

    />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/progressbarNomal"
        />
    <android.support.v4.view.ViewPager
        android:background="@color/colorText"
        android:id="@+id/vp_indianaramb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>
